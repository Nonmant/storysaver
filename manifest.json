{
  "manifest_version": 2,
  "name": "Сохранение историй ВК. Анонимно.",
  "short_name": "Save stories",
  "author": "Anton Bolotskikh",
  "description": "Сохраняйте истории с vk.com. Анонимно.",
  "homepage_url": "https://vk.com/savestories",
  "version": "0.71",
  "icons": {
    "16": "16.png",
    "24": "24.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png",
    "256": "256.png",
    "512": "512.png"
  },
  "permissions": [
    "downloads",
    "declarativeContent",
    "*://*.vk.com/*",
    "*://*.userapi.com/*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.vk.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Нажмите для анонимного сохранения",
    "default_icon": {
      "16": "16.png",
      "24": "24.png",
      "32": "32.png",
      "49": "49.png",
      "48": "48.png"
    }
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}
