{
  "manifest_version": 2,
  "name": "Сохранение историй ВК. Анонимно.",
  "short_name": "Save stories",
  "author": "Anton Bolotskikh",
  "description": "Сохраняйте истории с vk.com. Анонимно.",
  "homepage_url": "https://vk.com/savestories",
  "version": "1.67.0.0",
  "icons": {
    "24": "24.png",
    "30": "30.png",
    "42": "42.png",
    "54": "54.png",
    "120": "120.png",
    "150": "150w.png",
    "210": "210.png",
    "270": "270.png",
    "50": "50.png",
    "70": "70.png",
    "90": "90.png"
  },
  "permissions": [
    "downloads",
    "declarativeContent",
    "*://*.vk.com/*",
    "*://*.userapi.com/*",
    "storage",
    "tabs"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.vk.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Нажмите для анонимного сохранения",
    "default_icon": {
      "20": "20.png",
      "40": "40.png"
    }
  },
  "options_page": "options.html",
  "-ms-preload": {
    "backgroundScript": "backgroundScriptsAPIBridge.js",
    "contentScript": "contentScriptsAPIBridge.js"
  }
}
