{
"manifest_version": 2,
"name": "Сохранение историй ВК. Анонимно.",
"short_name": "Save stories",
"author": "Anton Bolotskikh",
"description": "Сохраняйте истории с vk.com. Анонимно.",
"homepage_url": "https://vk.com/savestories",
"version": "0.63",
"icons":{
"16":"16.png",
"24":"24.png",
"32":"32.png",
"48":"48.png",
"128":"128.png",
"256":"256.png",
"512":"512.png"
},
"permissions" : [
  "downloads",
  "declarativeContent",
  "*://*.vk.com/*",
  "*://*.userapi.com/*"
],
"background": {
  "scripts": ["background.js"],
  "persistent": false
},
"content_scripts": [
  {
    "matches": ["*://*.vk.com/*"],
    "js": ["content.js"]
  }
],
"page_action":{
"default_popup": "popup.html",
"default_title": "Нажмите для анонимного сохранения",
"default_icon": {
  "16":"16.png",
  "24":"24.png",
  "32":"32.png",
  "49":"49.png",
  "48":"48.png"
}
}
}
